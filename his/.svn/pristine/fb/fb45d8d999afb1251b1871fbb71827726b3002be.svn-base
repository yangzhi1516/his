package com.his.dao;

import java.util.List;

import com.his.entity.Drug;

public interface IDrugDao {
	
	/**
	 *  查找所有药物信息
	 * @return
	 */
	List<Drug> findAllDrug();
	
	/**
	 * 	按id查询药品信息
	 * @param id
	 * @return
	 */
	Drug findDrugById(Integer id);
	
	/**
	 * 	修改药物数量
	 * @param drug
	 * @return
	 */
	Integer updateDrugNumberById(Drug drug);
	
	/**
	 * 	根据id删除药物信息
	 * @param id
	 * @return
	 */
	Integer deleteDrugById(Integer id);
}
